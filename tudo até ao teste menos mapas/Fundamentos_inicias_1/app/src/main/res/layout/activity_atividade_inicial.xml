<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.fundamentos_inicias_1.AtividadeInicial"
    android:orientation="vertical">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:hint="Escreva aqui o seu nome" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:text="@string/bemvindo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:id="@+id/umdoistres"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:id="@+id/bot1"
            android:onClick="botao1"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="btn 1"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="botao2"
            android:layout_height="wrap_content"
            android:text="btn 2"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="botao3"
            android:layout_height="wrap_content"
            android:text="btn 3"/>



    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nome"
        android:id="@+id/editnome"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="idade"
        android:id="@+id/editidade"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:text="btn 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="btn 2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="btn 3"/>



    </LinearLayout>

</LinearLayout>
